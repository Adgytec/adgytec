---
import WithoutFooter from "@layouts/WithoutFooter.astro";
---

<style lang="scss">
	#notfound {
		position: relative;
		height: 100dvb;
		height: 100svb;
		width: 100dvi;

		display: grid;
		place-items: center;

		nav {
			position: absolute;
			top: 0;
			left: 50%;
			translate: -50%;
			z-index: 1;
		}

		#canvas1 {
			position: absolute;
			top: 0;
			left: 0;
		}

		h1 {
			--angle: 90deg;

			text-align: center;
			padding-block-end: 1rem;

			color: transparent;
			background-clip: text;
			background-image: linear-gradient(
				var(--angle),
				var(--accent-secondary-active),
				var(--accent-secondary),
				var(--accent-secondary-hover)
			);
			background-size: 500% 500%;
			background-repeat: no-repeat;

			animation: flow 5s ease infinite;
		}

		p {
			position: absolute;
			bottom: 10%;
		}
	}

	@keyframes flow {
		0% {
			background-size: 0% center;
		}
		50% {
			background-size: 500% 500%;
		}
		100% {
			background-size: 0% center;
		}
	}

	nav {
		padding-block: 1em;
		position: relative;

		z-index: 1;

		a {
			img {
				width: 15rem;
			}
		}
	}
</style>

<script type="text/partytown">
	import { initCanvas } from "@scripts/particles/canvas";

	document.addEventListener("astro:page-load", () => {
		initCanvas();
	});
</script>

<WithoutFooter pageTitle="404">
	<main id="notfound">
		<nav data-theme="dark" class="container-wide">
			<a href="/">
				<img src="/logo.svg" alt="adgytec" />
			</a>
		</nav>
		<canvas id="canvas1"></canvas>

		<h1 class="h1">
			404
			<br />
			Page not found!
		</h1>
		<p>
			Go to
			<a class="text" href="/" data-type="link" data-variant="primary">
				Home page.
			</a>
		</p>
	</main>
</WithoutFooter>
